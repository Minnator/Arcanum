<base:BaseWindow x:Class = "Arcanum.UI.HostUIServices.SettingsGUI.SettingsWindow"
                 xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:base = "clr-namespace:Arcanum.UI.Components.Base"
                 xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.Base.StyleClasses"
                 mc:Ignorable = "d"
                 Title = "SettingsWindow"
                 Height = "450"
                 Width = "800">
    <Grid Margin = "0,0,0,0"
          Background = "{StaticResource DefaultBackColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height = "1*" />
            <RowDefinition Height = "34" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row = "0"
                    x:Name = "SettingsTabControl"
                    HorizontalAlignment = "Stretch"
                    VerticalAlignment = "Stretch"
                    Style = "{StaticResource DarkTabStyle}"
                    Margin = "3,0, 0, 0"
                    TabStripPlacement = "Left"
                    BorderThickness="0"
                    BorderBrush="{StaticResource LightBackColorBrush}">
        </TabControl>

        <StackPanel Grid.Row = "1"
                    Style = "{StaticResource BaseStackPanelStyle}"
                    Orientation = "Horizontal"
                    HorizontalAlignment = "Right"
                    Margin = "0, 0, 0, 4">

            <styleClasses:BaseButton x:Name = "ResetSelected"
                                     Style = "{StaticResource BaseDarkButtonStyle}"
                                     Width = "120"
                                     Margin = "2, 2 , 0, 2"
                                     Content = "Reset Selected"
                                     BorderThickness = "2"
                                     CornerRadius = "3" />

            <styleClasses:BaseButton x:Name = "ResetAll"
                                     Style = "{StaticResource BaseDarkButtonStyle}"
                                     Width = "120"
                                     Margin = "2, 2 , 4, 2"
                                     Content = "Reset All"
                                     BorderThickness = "2"
                                     CornerRadius = "3" />


        </StackPanel>
    </Grid>


</base:BaseWindow>