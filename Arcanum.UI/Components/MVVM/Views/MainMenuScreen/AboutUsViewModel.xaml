<UserControl x:Class = "Arcanum.UI.Components.MVVM.Views.MainMenuScreen.AboutUsViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.Base.StyleClasses"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "40" />
            <RowDefinition Height = "50" />
            <RowDefinition Height = "80" />
            <RowDefinition Height = "50" />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "40" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row = "0"
                   Text = "About Us"
                   FontSize = "24"
                   FontWeight = "Bold"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Center"
                   Margin = "10" />

        <Rectangle Grid.Row = "1"
                   Fill = "{StaticResource DefaultBorderColorBrush}"
                   Height = "4"
                   Margin = "10,0,10,0"
                   RadiusX = "4"
                   RadiusY = "4">
        </Rectangle>

        <TextBlock Grid.Row = "2"
                   Margin = "10, 3"
                   FontSize = "14"
                   Text = "We created this tool in our spare time, as a project useful, to the Europa Universalis 5 modding community. &#x0a;If you want to support us feel free to check out our Patreon! &#x0a;I hope we made your modding easier and created a pleasant user experience for you.&#x0a;If you experience any bugs, think a feature is missing or an improvement could be made,&#x0a; let us know in forms of a GitHub issue!" />

        <Rectangle Grid.Row = "3"
                   Fill = "{StaticResource DefaultBorderColorBrush}"
                   Height = "4"
                   Margin = "10,0,10,0"
                   RadiusX = "4"
                   RadiusY = "4">
        </Rectangle>

        <TextBlock Grid.Row = "4"
                   Margin = "10, 3"
                   FontSize = "18"
                   Text = "Made by:" />

        <Grid Grid.Row = "5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column = "0"
                       HorizontalAlignment = "Center"
                       VerticalAlignment = "Center"
                       FontSize = "30"
                       Foreground = "{StaticResource GreenColorBrush}"
                       Text = "MINNATOR">
            </TextBlock>
            <TextBlock Grid.Column = "1"
                       HorizontalAlignment = "Center"
                       VerticalAlignment = "Center"
                       FontSize = "30"
                       Foreground = "{StaticResource GreenColorBrush}"
                       Text = "MEL-CO">
            </TextBlock>
        </Grid>

        <Grid Grid.Row = "6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
            </Grid.ColumnDefinitions>

            <styleClasses:BaseButton x:Name = "OpenPatreonButton"
                                     Grid.Column = "0"
                                     Margin = "50, 25"
                                     Padding = "10, 5"
                                     FontSize = "16"
                                     Click = "OpenPatreonButton_Click"
                                     Background = "Transparent"
                                     HoverBackground = "Transparent">
                <styleClasses:BaseButton.Style>
                    <Style TargetType = "styleClasses:BaseButton"
                           BasedOn = "{StaticResource BaseDarkButtonStyle}">
                        <Setter Property = "Background"
                                Value = "Transparent" />
                        <Style.Triggers>
                            <Trigger Property = "IsMouseOver"
                                     Value = "True">
                                <Setter Property = "Cursor"
                                        Value = "Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </styleClasses:BaseButton.Style>

                <Image Source = "../../../../Assets/Icons/PATREON_SYMBOL_1_WHITE_RGB.png" />

            </styleClasses:BaseButton>
            <styleClasses:BaseButton x:Name = "OpenDiscordButton"
                                     Grid.Column = "1"
                                     Margin = "50, 25"
                                     Padding = "10, 5"
                                     FontSize = "16"
                                     Click = "OpenGithubButton_OnClick"
                                     Background = "Transparent"
                                     HoverBackground = "Transparent">
                <styleClasses:BaseButton.Style>
                    <Style TargetType = "styleClasses:BaseButton"
                           BasedOn = "{StaticResource BaseDarkButtonStyle}">
                        <Setter Property = "Background"
                                Value = "Transparent" />
                        <Style.Triggers>
                            <Trigger Property = "IsMouseOver"
                                     Value = "True">
                                <Setter Property = "Cursor"
                                        Value = "Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </styleClasses:BaseButton.Style>
                <Image Source = "../../../../Assets/Icons/github_mark_white.png" />
            </styleClasses:BaseButton>
            <styleClasses:BaseButton x:Name = "OpenGithubButton"
                                     Grid.Column = "2"
                                     Margin = "50, 25"
                                     Padding = "10, 5"
                                     FontSize = "16"
                                     Click = "OpenDiscordButton_OnClick"
                                     Background = "Transparent"
                                     HoverBackground = "Transparent">
                <styleClasses:BaseButton.Style>
                    <Style TargetType = "styleClasses:BaseButton"
                           BasedOn = "{StaticResource BaseDarkButtonStyle}">
                        <Setter Property = "Background"
                                Value = "Transparent" />
                        <Style.Triggers>
                            <Trigger Property = "IsMouseOver"
                                     Value = "True">
                                <Setter Property = "Cursor"
                                        Value = "Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </styleClasses:BaseButton.Style>
                <Image Source = "../../../../Assets/Icons/Discord-Symbol-White.png" />
            </styleClasses:BaseButton>
        </Grid>
    </Grid>
</UserControl>