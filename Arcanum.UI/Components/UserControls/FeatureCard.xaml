<UserControl x:Class = "Arcanum.UI.Components.UserControls.FeatureCard"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Margin = "0,0,0,0"
            Padding = "5"
            Background = "{StaticResource OrangeAccentGradientBrush}"
            CornerRadius = "10"
            BorderBrush = "{StaticResource DefaultBorderColorBrush}"
            BorderThickness = "0"
            SnapsToDevicePixels = "True">
        <StackPanel Orientation = "Vertical">
            <!-- Title + Icon -->
            <StackPanel Orientation = "Horizontal"
                        VerticalAlignment = "Center"
                        Margin = "0,0,0,10">
                <TextBlock Text = "{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize = "16"
                           FontWeight = "Bold"
                           Margin = "0,0,10,0"
                           Style = "{StaticResource BaseTextBlock}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Description -->
            <TextBlock Text = "{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize = "14"
                       Style = "{StaticResource BaseTextBlock}" 
                       TextWrapping="Wrap"
                       />
        </StackPanel>
    </Border>
</UserControl>