<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key = "DarkProgressBarTemplate"
                     TargetType = "ProgressBar">
        <Border Background = "{StaticResource DarkBackColorBrush}"
                CornerRadius = "6"
                Margin = "0">
            <Grid Name = "TemplateRoot"
                  SnapsToDevicePixels = "True"
                  Margin = "0">
                <Border CornerRadius = "4"
                        Margin = "0"
                        Background = "Transparent"
                        BorderBrush = "{StaticResource DefaultBorderColorBrush}"
                        BorderThickness = "2" />
                <Rectangle Name = "PART_Track"
                           Margin = "1"
                           Fill = "Transparent" />
                <Decorator Name = "PART_Indicator"
                           Margin = "1"
                           HorizontalAlignment = "Left">
                    <Grid Name = "Foreground">
                        <Grid Name = "Animation"
                              ClipToBounds = "True"
                              Margin = "1">
                            <Border Name = "PART_GlowRect"
                                    Width = "100"
                                    Margin = "0"
                                    CornerRadius = "6"
                                    HorizontalAlignment = "Left"
                                    Background = "{StaticResource BlueSelectionBackColorBrush}"
                                    BorderBrush = "{StaticResource DefaultBorderColorBrush}"
                                    BorderThickness = "2" />
                        </Grid>
                        <Grid Name = "Overlay">
                            <!-- This is where we put the percentage text -->
                        </Grid>
                    </Grid>
                </Decorator>
                <Border BorderThickness = "0"
                        CornerRadius = "0"
                        BorderBrush = "Transparent" />
            </Grid>
        </Border>
    </ControlTemplate>

    <Style x:Key = "DarkProgressBar"
           TargetType = "ProgressBar">
        <Setter Property = "Template"
                Value = "{StaticResource DarkProgressBarTemplate}" />
        <Setter Property = "Foreground"
                Value = "{StaticResource BlueSelectionBackColorBrush}" />
        <Setter Property = "Background"
                Value = "{StaticResource DefaultBackColorBrush}" />
    </Style>

</ResourceDictionary>