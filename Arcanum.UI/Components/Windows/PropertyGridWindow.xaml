<base:BaseWindow x:Class = "Arcanum.UI.Components.Windows.PropertyGridWindow"
                 xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local = "clr-namespace:Arcanum.UI.Components.Windows"
                 xmlns:base = "clr-namespace:Arcanum.UI.Components.Base"
                 xmlns:userControls = "clr-namespace:Arcanum.UI.Components.UserControls"
                 xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.Base.StyleClasses"
                 mc:Ignorable = "d"
                 Title = "PropertyGridWindow"
                 Height = "450"
                 Width = "300"
                 Background = "{StaticResource DefaultBackColorBrush}"
                 BorderThickness="0">
    <userControls:PropertyGrid x:Name = "PropertyGrid"
                  Margin = "2"
                  Background = "{StaticResource DefaultBackColorBrush}"
                  BorderThickness = "0"
                  BorderBrush = "{StaticResource DefaultBorderColorBrush}"
                  SelectedObject = "{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=Window}}">
    </userControls:PropertyGrid>
</base:BaseWindow>