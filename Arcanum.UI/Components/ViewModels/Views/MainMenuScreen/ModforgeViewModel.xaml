<UserControl x:Class = "Arcanum.UI.Components.ViewModels.Views.MainMenuScreen.ModforgeViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.Base.StyleClasses"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "700">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "../../../Base/Styles/PresentationCard.xaml" />
                <ResourceDictionary>

                    <Style x:Key = "SocialCardBorderStyle"
                           TargetType = "Border"
                           BasedOn = "{StaticResource PresentationCard}">
                        <Setter Property = "Width"
                                Value = "150" />
                        <Setter Property = "Height"
                                Value = "150" />
                        <Setter Property = "Background"
                                Value = "BlueViolet" />
                        <Setter Property = "Margin"
                                Value = "0" />
                    </Style>

                    <!-- TextBlock Styles -->
                    <Style x:Key = "TitleText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "28" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SectionHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "Margin"
                                Value = "0,0,0,10" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SocialHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "TextAlignment"
                                Value = "Center" />
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "VerticalAlignment"
                                Value = "Center" />
                        <Setter Property = "Width"
                                Value = "75" />
                        <Setter Property = "Margin"
                                Value = "2,12,5,0" />
                    </Style>

                    <Style x:Key = "SocialBodyText"
                           TargetType = "TextBlock">
                        <Setter Property = "FontSize"
                                Value = "18" />
                        <Setter Property = "TextAlignment"
                                Value = "Center" />
                        <Setter Property = "Foreground"
                                Value = "LightGray" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Center" />
                        <Setter Property = "Margin"
                                Value = "5,12,5,5" />
                    </Style>

                    <!-- Image Style -->
                    <Style x:Key = "SocialIconStyle"
                           TargetType = "Image">
                        <Setter Property = "Width"
                                Value = "60" />
                        <Setter Property = "Height"
                                Value = "60" />
                        <Setter Property = "Margin"
                                Value = "5,10,0,0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text = "Discover"
                   Style = "{StaticResource TitleText}"
                   Margin = "0,0,0,10" />

        <StackPanel Orientation = "Horizontal">
            <!-- News Card -->
            <Border Width = "400"
                    Height = "200"
                    Style = "{StaticResource PresentationCard}">
                <Border.Background>
                    <LinearGradientBrush StartPoint = "0,0"
                                         EndPoint = "1,2">
                        <GradientStop Color = "CornflowerBlue"
                                      Offset = "0.0" />
                        <GradientStop Color = "BlueViolet"
                                      Offset = "1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel>
                        <TextBlock Text = "Arcanum News"
                                   Style = "{StaticResource TitleText}"
                                   Margin = "20,20,20,0" />
                        <TextBlock Text = "Editor go BRRRR:&#x0a;Increasing performance of the Selection"
                                   Width = "250"
                                   HorizontalAlignment = "Left"
                                   Foreground = "White"
                                   TextWrapping = "WrapWithOverflow"
                                   FontSize = "18"
                                   Margin = "20,15,20,20" />
                    </StackPanel>
                    <Image Width = "120"
                           Height = "120"
                           Source = "../../../../Assets/Images/ProvinceFileCreator1024x1024.png"
                           Margin = "270,10,10,10" />
                </Grid>
            </Border>

            <!-- Latest Release Card -->
            <Border Width = "200"
                    Height = "200"
                    Margin = "50,0,0,0"
                    Style = "{StaticResource PresentationCard}">
                <Border.Background>
                    <LinearGradientBrush StartPoint = "0,0"
                                         EndPoint = "1,2">
                        <GradientStop Color = "SandyBrown"
                                      Offset = "0.0" />
                        <GradientStop Color = "Purple"
                                      Offset = "1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text = "Latest Release"
                               Style = "{StaticResource TitleText}"
                               HorizontalAlignment = "Center"
                               Margin = "10,20,10,0" />
                    <TextBlock x:Name = "LatestReleaseNameTextBox"
                               Text = "Fetching data..."
                               Foreground = "{StaticResource AccentBackColorBrush}"
                               TextAlignment = "Center"
                               FontSize = "20"
                               Margin = "20,20,20,0"/>
                    <TextBlock x:Name = "LatestReleaseVersionTextBox"
                               Text = "Version 1.1.0.0-beta"
                               Foreground = "LightGray"
                               TextAlignment = "Center"
                               FontSize = "12"
                               Margin = "20,5,20,20" />
                    <TextBlock x:Name = "LatestReleaseUpdateTextBox"
                        Text = "Get it now!"
                               Foreground = "White"
                               TextWrapping = "WrapWithOverflow"
                               FontSize = "26"
                               HorizontalAlignment = "Center"
                               Margin = "20,0,20,20" />
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Orientation = "Horizontal"
                    Margin = "0,15,0,0">
            <!-- Feature Spotlight -->
            <StackPanel>
                <TextBlock Text = "Feature Spotlight"
                           Style = "{StaticResource SectionHeaderText}" />
                <Border Width = "315"
                        Height = "150"
                        Background = "BlueViolet"
                        Style = "{StaticResource PresentationCard}"
                        Margin = "0" />
            </StackPanel>

            <!-- Socials -->
            <StackPanel Margin = "20,0,0,0">
                <TextBlock Text = "Socials"
                           Style = "{StaticResource SectionHeaderText}" />
                <StackPanel Orientation = "Horizontal">
                    <!-- Discord -->
                    <Border Style = "{StaticResource SocialCardBorderStyle}">
                        <StackPanel>
                            <StackPanel Orientation = "Horizontal">
                                <Image Source = "../../../../Assets/Images/ProvinceFileCreator1024x1024.png"
                                       Style = "{StaticResource SocialIconStyle}" />
                                <TextBlock Style = "{StaticResource SocialHeaderText}">
                                    <Bold> Discord </Bold>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Text = "Join our Server&#x0a; for Updates!"
                                       Style = "{StaticResource SocialBodyText}" />
                        </StackPanel>
                    </Border>

                    <!-- GitHub -->
                    <Border Style = "{StaticResource SocialCardBorderStyle}"
                            Margin = "15,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation = "Horizontal">
                                <Image Source = "../../../../Assets/Images/ProvinceFileCreator1024x1024.png"
                                       Style = "{StaticResource SocialIconStyle}" />
                                <TextBlock Style = "{StaticResource SocialHeaderText}">
                                    <Bold> GitHub </Bold>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Text = "Explore the Wiki,&#x0a; Report Issues"
                                       Style = "{StaticResource SocialBodyText}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>


