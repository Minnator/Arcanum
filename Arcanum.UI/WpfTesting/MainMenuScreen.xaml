<Window x:Class = "Arcanum.UI.WpfTesting.MainMenuScreen"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel = "clr-namespace:Arcanum.UI.Components.ViewModels"
        xmlns:view = "clr-namespace:Arcanum.UI.Components.ViewModels.Views"
        xmlns:b = "http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors = "clr-namespace:Arcanum.UI.Components.Behaviors"
        xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.Base.StyleClasses"
        xmlns:mainMenuScreen = "clr-namespace:Arcanum.UI.Components.ViewModels.Views.MainMenuScreen"
        mc:Ignorable = "d"
        Height = "550"
        Width = "900"
        WindowStyle = "None"
        ResizeMode = "NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate DataType = "{x:Type mainMenuScreen:HomeViewModel}">
                <mainMenuScreen:HomeViewModel />
            </DataTemplate>
            <DataTemplate DataType = "{x:Type view:ModforgeViewModel}">
                <view:ModforgeViewModel />
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "../Components/Base/Styles/MenuButtonTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <!-- #272537 -->
    <Border Background = "{StaticResource AccentGradientBrush}"
            CornerRadius = "0">
        <b:Interaction.Behaviors>
            <behaviors:WindowDrag EnableDoubleClickMaximize = "False" />
        </b:Interaction.Behaviors>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height = "75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text = "Arcanum"
                       VerticalAlignment = "Center"
                       HorizontalAlignment = "Center"
                       Foreground = "{StaticResource DefaultForeColorBrush}"
                       FontSize = "30"
                       FontWeight = "Bold">
            </TextBlock>

            <StackPanel Grid.Row = "1"
                        Grid.Column = "0">
                <RadioButton IsChecked = "True"
                             Margin = "40,0,40,10"
                             Content = "Home"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding HomeVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <RadioButton x:Name = "ArcanumTabButton"
                             Margin = "40,0,40,10"
                             Content = "Arcanum"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding FeatureVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <RadioButton Margin = "40,0,40,10"
                             Content = "Features"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding FeatureVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <RadioButton IsChecked = "False"
                             Margin = "40,0,40,10"
                             Content = "Modforge"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding ModforgeVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <RadioButton Margin = "40,0,40,10"
                             Content = "About Us"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding FeatureVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <RadioButton Margin = "40,0,40,10"
                             Content = "Attributions"
                             Height = "30"
                             Foreground = "{StaticResource DefaultForeColorBrush}"
                             FontSize = "14"
                             Command = "{Binding FeatureVc}"
                             Style = "{StaticResource MenuButtonTheme}" />
                <Image Source = "../../Assets/Icons/ArcanumForeColor.png"
                       Margin = "40, 73, 40, 40" />
            </StackPanel>

            <Grid Row = "0"
                  Column = "1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "40" />
                    <ColumnDefinition Width = "40" />
                    <ColumnDefinition Width = "*" />
                    <ColumnDefinition Width = "300" />
                </Grid.ColumnDefinitions>


                <styleClasses:BaseButton Grid.Column = "0"
                                         x:Name = "CreatNewProjectButton"
                                         VerticalAlignment = "Center"
                                         Margin = "10, 17, 5, 10"
                                         CornerRadius = "7"
                                         Height = "25"
                                         Width = "25"
                                         Click = "CreateNewProjectButton_Click"
                                         Background = "{StaticResource GreenColorBrush}"
                                         Style = "{StaticResource BaseDarkButtonStyle}"
                                         ToolTip = "Create a new Arcanum configuration for a mod">
                    <Image Source = "../../Assets/Icons/30x30/AddBordered30x30.png" />
                </styleClasses:BaseButton>

                <styleClasses:BaseButton Grid.Column = "1"
                                         x:Name = "LoadLastConfigButton"
                                         VerticalAlignment = "Center"
                                         Margin = "0, 17, 10, 10"
                                         CornerRadius = "7"
                                         Height = "25"
                                         Width = "25"
                                            Click = "LoadLastConfigButton_Click"
                                         Background = "{StaticResource GreenColorBrush}"
                                         Style = "{StaticResource BaseDarkButtonStyle}"
                                         ToolTip = "Load last Arcanum configuration">
                    <Image Source = "../../Assets/Icons/30x30/Play30x30.png" />
                </styleClasses:BaseButton>

                <styleClasses:BaseButton Grid.Column = "3"
                                         x:Name = "CloseButton"
                                         VerticalAlignment = "Top"
                                         HorizontalAlignment = "Right"
                                         Margin = "10"
                                         Height = "35"
                                         Width = "35"
                                         Style = "{StaticResource BaseDarkButtonStyle}"
                                         Background = "Transparent"
                                         Click = "CloseButton_Click">
                    <Image Source = "../../Assets/Icons/40x40/Close40x40.png"> </Image>
                </styleClasses:BaseButton>
            </Grid>

            <ContentControl Grid.Row = "1"
                            Grid.Column = "1"
                            Margin = "10"
                            Content = "{Binding CurrentView}" />

        </Grid>

    </Border>
</Window>