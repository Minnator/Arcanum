    <!--            Text = "• Trigger and scope engine compatible with Paradox syntax." /> -->
    <!-- <TextBlock Style = "{StaticResource BaseTextBlock}" -->
    <!--            Text = "• Auto file creation, syncing, and mod structure management." /> -->
