<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system = "clr-namespace:System;assembly=System.Runtime">

    <!-- Default font -->
    <FontFamily x:Key = "DefaultFont"> Segoe UI </FontFamily>
    <FontWeight x:Key = "DefaultFontWeight"> Normal </FontWeight>
    <system:Double x:Key = "DefaultFontSize"> 12 </system:Double>
    
    <!-- Default font styles but monospaced -->
    <FontFamily x:Key = "DefaultMonospacedFont"> Consolas </FontFamily>
    <FontWeight x:Key = "DefaultMonospacedFontWeight"> Normal </FontWeight>
    <system:Double x:Key = "DefaultMonospacedFontSize"> 12 </system:Double>


</ResourceDictionary>